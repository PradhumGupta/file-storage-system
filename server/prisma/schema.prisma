generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URI")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  password     String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  refreshToken String?
  name         String
  files        File[]
  folders      Folder[]
  memberships  Membership[]
  team         TeamMember[]
}

model Workspace {
  id          String        @id @default(cuid())
  name        String
  type        WorkspaceType
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  files       File[]
  folders     Folder[]
  memberships Membership[]
  teams       Team[]
}

model Membership {
  id          String        @id @default(cuid())
  userId      String
  workspaceId String
  createdAt   DateTime      @default(now())
  role        WorkspaceRole @default(MEMBER)
  user        User          @relation(fields: [userId], references: [id])
  workspace   Workspace     @relation(fields: [workspaceId], references: [id])

  @@unique([userId, workspaceId])
}

model Team {
  id          String       @id @default(cuid())
  name        String
  desc        String
  workspaceId String
  folders     Folder[]
  workspace   Workspace    @relation(fields: [workspaceId], references: [id])
  members     TeamMember[]
}

model TeamMember {
  id     String   @id @default(cuid())
  userId String
  teamId String
  role   TeamRole
  team   Team     @relation(fields: [teamId], references: [id])
  user   User     @relation(fields: [userId], references: [id])

  @@unique([userId, teamId])
}

model Folder {
  id          String           @id @default(cuid())
  name        String
  parentId    String?
  workspaceId String
  ownerId     String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  teamId      String?
  access      FolderVisibility @default(PUBLIC)
  files       File[]
  owner       User             @relation(fields: [ownerId], references: [id])
  parent      Folder?          @relation("SubFolders", fields: [parentId], references: [id])
  subFolders  Folder[]         @relation("SubFolders")
  team        Team?            @relation(fields: [teamId], references: [id])
  workspace   Workspace        @relation(fields: [workspaceId], references: [id])
}

model File {
  id          String    @id @default(cuid())
  filename        String    // changed from filename to name
  path        String
  workspaceId String
  uploadedBy  String
  createdAt   DateTime  @default(now())
  type        String
  folderId    String?
  folder      Folder?   @relation(fields: [folderId], references: [id])
  uploader    User      @relation(fields: [uploadedBy], references: [id])
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
}

enum WorkspaceType {
  PERSONAL
  ORGANIZATION
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum TeamRole {
  TEAM_ADMIN
  TEAM_MEMBER
  TEAM_VIEWER
}

enum FolderVisibility {
  PRIVATE
  PUBLIC
}
